<%= form_with url: foods_path, method: :post, local: true, html: { "data-turbo": "false" }, scope: :add_food do |form| %>

  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :measurement_unit %><br>
    <%= form.select :measurement_unit, %w[kg units l ml cl g] %>
  </div>

  <div>
    <%= form.label :price %><br>
    <%= form.number_field :price, step: 0.5 %>
  </div>

  <%= form.submit 'Save Food' %>
<% end %>
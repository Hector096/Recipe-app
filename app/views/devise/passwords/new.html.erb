<div class="text-center">
<div class="w-100 mt-5">
<div class="d-flex justify-content-center flex-column">
<h2 class="display-3 mb-5">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { "data-turbo": "false",  method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, class: 'w-50 mt-3', autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="actions mt-3">
    <%= f.submit "Send me reset password instructions", class: 'w-50 mt-3 mb-3' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
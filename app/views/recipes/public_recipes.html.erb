<div class="container-fluid">
  <h1 class="text-center mt-4 mb-5">Public Recipes</h1>
  <% @recipes.each do |recipe| %>
    <%= link_to recipe_url(recipe), class: 'recipe-box d-flex-column' do %>
      <div class="m-2 border p-5">
        <div class="d-flex" style="justify-content: space-between">
          <div>
          <h3><%= recipe.name%></h3>
          <h4 class="ms-2 text-decoration-none">By: <%= recipe.user.name %></h4>
          </div>
          <div style="margin-right: 15rem; justify-content: space-between">
            <p class="fs-4 text-decoration-none" style="text-decoration: none">Total food items: <%= recipe.total_food_items %></p>
            <p class="fs-4 text-decoration-none">Total price: $<%= recipe.total_price %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
<div class="public-recipes-container">
  <h1>Public Recipes</h1>
  <% @recipes.each do |recipe| %>
    <%= link_to recipe_url(recipe), class: 'recipe-box d-flex-column' do %>
      <div>
        <div class="d-flex" style="justify-content: space-between">
          <h3><%= recipe.name%></h3>
          <div class="d-flex d-flex-column" style="margin-right: 15rem; justify-content: space-between">
            <p>Total food items: <%= recipe.total_food_items %></p>
            <p>Total price: $<%= recipe.total_price %></p>
          </div>
        </div>
      </div>
      <h4>By: <%= recipe.user.name %></h4>
    <% end %>
  <% end %>
</div>